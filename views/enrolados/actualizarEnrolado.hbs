<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Actualizar Enrolados <i class="fa fa-users"></i></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Enrolado
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form role="form" method="POST" action="/listarEnrolados/editar">

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Rut Cliente</label>
                                            <input class="form-control" disabled value="{{enrolado.RutPer_e}}">
                                            <input type="hidden" name="RutPer_e" value="{{enrolado.RutPer_e}}">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Municipio</label>
                                            <select class="form-control" name="IdMuni_e" id="IdMuni_e" maxlength="20" required name="IdMuni">
                                                {{#each municipios}}
                                                <option value="{{IdMuni}}">{{NombreMunic}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>

                                    <input type="hidden" value="{{enrolado.IdMuni_e}}" id="IdMuni_e_Previo">
                                    <script>
                                        let idMuniPrevio = document.getElementById("IdMuni_e_Previo").value;
                                        console.log("ID: " + idMuniPrevio);

                                        document.getElementById("IdMuni_e").value = idMuniPrevio;
                                    </script>

                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-success">Guardar</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->