<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Listado Enrolados <i class="fa fa-users"></i></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Registros

                    <span></span>
                </div>
                <!-- /.panel-heading -->

                <div class="row" style="padding:16px">
                    <div class="col-lg-12" style="margin-bottom: 10px;">
                        <form role="form" method="POST" action="/ventas/listarVentas">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Buscar por RUT" name="rut">
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </form>
                    </div>

                    <div class="col-lg-12">
                        <span><a class="btn">Ordenar:</a></span>
                        <span><a class="btn btn-warning" href="/enrolados/listarEnrolados/byDateDesc">Fecha: Desc</a></span>
                        <span><a class="btn btn-warning" href="/enrolados/listarEnrolados/byDateAsc">Fecha: Asc</a></span>
                    </div>
                </div>

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Cliente</th>
                                    <th>Municipio</th>
                                    <th>Acci√≥n</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each enrolados}}
                                <tr class="odd gradeX">
                                    <td>{{FechaEnrolamientoBonita}}</td>
                                    <td>{{RutPer_e_Bonito}}</td>
                                    <td>{{IdMuni_e}}</td>
                                    <td>
                                        <a class="btn btn-primary" href="/enrolados/editar/{{RutPer_e}}">Editar</a>
                                        <a class="btn btn-danger" href="/enrolados/eliminar/{{FechaEnrolamiento}}/{{RutPer_e}}/{{IdMuni_e}}">Eliminar</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->