<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Actualizar Recetas <i class="fa fa-hospital-o fa-fw"></i></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Recetas
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form role="form" method="POST" action="/recetas/editar">

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Id Recetas</label>
                                            <input class="form-control" disabled value="{{receta.NumSerie}}">
                                            <input type="hidden" name="NumSerie" value="{{receta.NumSerie}}" required> 
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Rut Medico</label>
                                            <input class="form-control" value="{{receta.RutMed_r}}" name="RutMed_r" required>
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Rut Persona</label>
                                            <input class="form-control" value="{{receta.RutPer_r}}" name="RutPer_r" required>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Medicamento</label>
                                            <select class="form-control" maxlength="20" required name="IdMed_r">
                                                {{#each medicamentos}}
                                                <option value="{{IdMed}}">{{IdMed}} - {{NomMed}}</option>
                                                {{/each}}
                                            </select>

                                        </div>
                                    </div>

                                    <input type="hidden" value="{{receta.IdMed_r}}" id="IdMed_r_Previo">
                                    <script>
                                        let idMuniPrevio = document.getElementById("IdMed_r_Previo").value;
                                        console.log("ID: " + idMuniPrevio);

                                        document.getElementById("IdMed_r").value = idMuniPrevio;
                                    </script>

                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-success">Guardar</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->