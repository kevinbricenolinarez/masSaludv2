<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Registrar Receta <i class="fa fa-file"></i></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Recetas
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form role="form" method="POST" action="/recetas/agregarReceta">

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Número de Serie</label>
                                            <input type="number" class="form-control" name="NumSerie" min="1" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>RUT Médico</label>
                                            <input type="number" class="form-control" name="RutMed_r" maxlength="11" required
                                                placeholder="262632008" value="262632012">
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>RUT Cliente</label>
                                            <input type="number" class="form-control" name="RutPer_r" maxlength="11" required
                                                placeholder="262632008" value="21263200">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Medicamento</label>
                                            <select class="form-control" maxlength="20" required name="IdMed_r">
                                                {{#each medicamentos}}
                                                <option value="{{IdMed}}">{{IdMed}} - {{NomMed}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <button class="btn btn-success">Guardar</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->