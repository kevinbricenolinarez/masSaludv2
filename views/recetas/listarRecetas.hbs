<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Listado Recetas <i class="fa fa-file fa-fw"></i></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Recetas

                    <span></span>
                </div>
                <!-- /.panel-heading -->

                <div class="row" style="padding:16px">
                    <div class="col-lg-12" style="margin-bottom: 10px;">
                    <div class="input-group custom-search-form">
                        <input type="text" class="form-control" placeholder="Buscar...">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="button">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                    <!-- /input-group -->
                    </div>

                    
                    
                    <br>
                    
                    <div class="col-lg-12">
                        <span><a class="btn">Ordenar:</a></span>
                        <span><a class="btn btn-warning" >Numero de Serie</a></span>
                        
                    </div>

                </div>

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    
                                    <th>Numero de Serie</th>
                                    <th>Rut Medico</th>
                                    <th>Rut Cliente</th>
                                    <th>Medicamento</th>
                                    <th>Acci√≥n</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each recetas}}
                                <tr class="odd gradeX">
                                   
                                    <td>{{NumSerie}}</td>
                                    <td>{{RutMed_r}}</td>
                                    <td>{{RutPer_r}}</td>
                                    <td>{{IdMed_r}}</td>
                                    <td>
                                        <a class="btn btn-primary" href="/recetas/editar/{{NumSerie}}">Editar</a>
                                        <a class="btn btn-danger" href="/recetas/eliminar/{{NumSerie}}">Eliminar</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->