<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Actualizar Recetas <i class="fa fa-hospital-o fa-fw"></i></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Recetas
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form role="form" method="POST" action="/sucursales/editar">

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Id Recetas</label>
                                            <input class="form-control" disabled value="{{recetas.NumSerie}}">
                                            <input type="hidden" name="NumSerie" value="{{recetas.NumSerie}}" required> 
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Rut Medico</label>
                                            <input class="form-control" disabled value="{{recetas.RutMed_r}}">
                                            <input type="hidden" name="RutMed_r" value="{{recetas.RutMed_r}}" required> 
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Rut Persona</label>
                                            <input class="form-control" disabled value="{{recetas.RutPer_r}}">
                                            <input type="hidden" name="RutPer_r" value="{{recetas.RutPer_r}}" required> 
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Id Medicamento</label>
                                            <input class="form-control" id="nomMedic" maxlength="40" name="IdMed_r" required value="{{sucursal.IdMed_r}}">
                                            <p class="help-block">Ingrese nombre Medicamento</p>
                                        </div>
                                    </div>

                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-success">Guardar</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->