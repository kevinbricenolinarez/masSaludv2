<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Listado Ventas <i class="fa fa-cart-plus"></i></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Registros

                    <span></span>
                </div>
                <!-- /.panel-heading -->

                <div class="row" style="padding:16px">

                    <div class="col-lg-12">
                        <span><a class="btn">Ordenar:</a></span>
                        <span><a class="btn btn-warning" href="/ventas/listarVentas/byDateDesc">Fecha: Desc</a></span>
                        <span><a class="btn btn-warning" href="/ventas/listarVentas/byDateAsc">Fecha: Asc</a></span>
                    </div>

                    
                </div>

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Hora</th>
                                    <th>Medicamento</th>
                                    <th>Cliente</th>
                                    <th>Presentación</th>
                                    <th>Formato</th>
                                    <th>Vendedor</th>
                                    <th>Descuento</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each ventas}}
                                <tr class="odd gradeX">
                                    <td>{{FechaVentaBonita}}</td>
                                    <td>{{HoraVenta}}</td>
                                    <td>{{IdMed_v}}</td>
                                    <td>{{RutPer_v_Bonito}}</td>
                                    <td>{{TipoVenta}}</td>
                                    <td>{{TipoFormato_v}}</td>
                                    <td>{{RutQui_v_Bonito}}</td>
                                    <td>{{AplicSN_v}}</td>
                                    <td>
                                        <a class="btn btn-primary" href="/ventas/editar/{{RutPer_v}}/{{FechaVenta}}/{{HoraVenta}}">Editar</a>
                                        <a class="btn btn-danger" href="/ventas/eliminar/{{RutPer_v}}/{{FechaVenta}}/{{HoraVenta}}">Eliminar</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->