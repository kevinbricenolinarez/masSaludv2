<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Actualizar Venta <i class="fa fa-cart-plus"></i></h1>   
        </div>
       
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Venta
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form role="form" method="POST" action="/ventas/editar">

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>RUT Cliente</label>
                                            <input type="number" class="form-control" name="RutPer_v" value="{{venta.RutPer_v}}" disabled>
                                            <input type="hidden" name="RutPer_v" value="{{venta.RutPer_v}}" required>

                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>RUT Vendedor</label>
                                            <input type="number" class="form-control" name="RutQuim_v" value="{{venta.RutQuim_v}}" disabled>
                                            <input type="hidden" name="RutQuim_v" value="{{venta.RutQuim_v}}" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Fecha Venta</label>
                                            <input type="date" class="form-control" value="{{venta.FechaVenta}}" disabled>
                                            <input type="hidden" name="FechaVenta" value="{{venta.FechaVenta}}" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Hora Venta</label>
                                            <input type="time" class="form-control" value="{{venta.HoraVenta}}" disabled>
                                            <input type="hidden" name="HoraVenta" value="{{venta.HoraVenta}}" required>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Medicamento</label>
                                            <select class="form-control" name="IdMed_v" id="IdMed_v" maxlength="20" required name="IdMed">
                                                {{#each data.medicamentos}}
                                                <option value="{{IdMed}}">{{NomMed}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Formato MED</label>
                                            <select class="form-control" name="TipoFormato_v" id="TipoFormato_v" maxlength="20" required>
                                                {{#each data.formatos}}
                                                <option value="{{TipoFormato}}">{{Descripcion}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Presentaci√≥n MED</label>
                                            <select class="form-control" name="TipoPresentacion_v" id="TipoPresentacion_v" maxlength="20" required name="TipoPresentacion_l">
                                                {{#each data.presentaciones}}
                                                <option value="{{TipoPresentacion}}">{{TipoPresentacion}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Tipo MED</label>
                                            <select class="form-control" id="TipoVenta" name="TipoVenta" maxlength="20" required>
                                                {{#each data.tipos}}
                                                <option value="{{TipoMedic}}">{{TipoMedic}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>

                                    <input type="hidden" value="{{venta.IdMed_v}}" id="IdMed_v_Previo">
                                    <input type="hidden" value="{{venta.TipoFormato_v}}" id="TipoFormato_v_Previo">
                                    <input type="hidden" value="{{venta.TipoPresentacion_v}}" id="TipoPresentacion_v_Previo">
                                    <input type="hidden" value="{{venta.TipoVenta}}" id="TipoVenta_Previo">
                                    <script>
                                        let idMed = document.getElementById("IdMed_v_Previo").value;
                                        let tipoFormato = document.getElementById("TipoFormato_v_Previo").value;
                                        let tipoPresentacion = document.getElementById("TipoPresentacion_v_Previo").value;
                                        let tipoVenta = document.getElementById("TipoVenta_Previo").value;

                                        document.getElementById("IdMed_v").value = idMed;
                                        document.getElementById("TipoFormato_v").value = tipoFormato;
                                        document.getElementById("TipoPresentacion_v").value = tipoPresentacion;
                                        document.getElementById("TipoVenta").value = tipoVenta;
                                    </script>

                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <button class="btn btn-success">Guardar</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->