<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Registrar Venta <i class="fa fa-cart-plus"></i></h1>   
        </div>
       
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Venta
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form role="form" method="POST" action="/ventas/agregarVenta">

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>RUT Cliente</label>
                                            <input type="number" class="form-control" name="RutPer_v" maxlength="11" required
                                                placeholder="262632008" value="11111107">
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>RUT Vendedor</label>
                                            <input type="number" class="form-control" name="RutQuim_v" maxlength="11" required
                                                placeholder="262632008" value="12312421">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Medicamento</label>
                                            <select class="form-control" name="IdMed_v" maxlength="20" required name="IdMed">
                                                {{#each data.medicamentos}}
                                                <option value="{{IdMed}}">{{NomMed}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Formato MED</label>
                                            <select class="form-control" name="TipoFormato_v" maxlength="20" required>
                                                {{#each data.formatos}}
                                                <option value="{{TipoFormato}}">{{Descripcion}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Presentaci√≥n MED</label>
                                            <select class="form-control" name="TipoPresentacion_v" maxlength="20" required name="TipoPresentacion_l">
                                                {{#each data.presentaciones}}
                                                <option value="{{TipoPresentacion}}">{{TipoPresentacion}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Tipo MED</label>
                                            <select class="form-control" name="TipoVenta" maxlength="20" required>
                                                {{#each data.tipos}}
                                                <option value="{{TipoMedic}}">{{TipoMedic}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <button class="btn btn-success">Guardar</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->