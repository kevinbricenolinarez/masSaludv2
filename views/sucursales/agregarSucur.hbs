<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Agregar Sucursal <i class="fa fa-hospital-o fa-fw"></i></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Sucursal
                </div>
                
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form role="form" method="POST" action="/sucursales/agregarSucur">
                                
                                <div class="row">
                                    <div class="col-lg-2">
                                        <div class="form-group">
                                            <label>ID</label>
                                            <input type="number" id="idsuc" class="form-control" required min="1" name="IdSucursal" value="{{IdSucursal}}">
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>Municipio</label>
                                            <select class="form-control" name="IdMuni_s" maxlength="255" required>
                                                {{#each municipios}}
                                                <option value="{{IdMuni}}">{{IdMuni}} - {{NombreMunic}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>Nombre Sucursal</label>
                                            <input id="nomsuc" class="form-control" required maxlength="255" name="NombreSucursal" value="{{NombreSucursal}}">
                                        </div>
                                    </div>
                                
                  
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-success" >Guardar</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->