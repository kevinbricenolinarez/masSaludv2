<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Actualizar Sucursal <i class="fa fa-hospital-o fa-fw"></i></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Sucursal
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form role="form" method="POST" action="/sucursales/editar">

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Id Sucursal</label>
                                            <input class="form-control" disabled value="{{sucursal.IdSucursal}}">
                                            <input type="hidden" name="IdSucursal" value="{{sucursal.IdSucursal}}" required> 
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Nombre Sucursal</label>
                                            <input class="form-control" id="nomsucur" maxlength="40" name="NombreSucursal" required value="{{sucursal.NombreSucursal}}">
                                            <p class="help-block">Ingrese nombre Sucursal</p>
                                        </div>
                                    </div>

                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-success">Guardar</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->