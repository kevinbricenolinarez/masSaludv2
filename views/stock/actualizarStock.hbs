<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Actualizar Stock <i class="fa fa-bars"></i></h1>   
        </div>
       
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Stock
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form role="form" method="POST" action="/stock/editar">

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>ID Proveedor</label>
                                            <input type="number" class="form-control" name="IdProv_s" value="{{stock.IdProv_s}}" disabled>
                                            <input type="hidden" name="IdProv_s" value="{{stock.IdProv_s}}" required>

                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>ID Medicamento</label>
                                            <input type="number" class="form-control" name="IdMed_s" value="{{stock.IdMed_s}}" disabled>
                                            <input type="hidden" name="IdMed_s" value="{{stock.IdMed_s}}" required>

                                        </div>

                                    </div>

                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>ID Lote</label>
                                            <input type="number" class="form-control" value="{{stock.IdLote_s}}" disabled>
                                            <input type="hidden" name="IdLote_s" value="{{stock.IdLote_s}}" required>

                                        </div>
                                    </div>                                       
                                    
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Presentaci√≥n MED</label>
                                            <select class="form-control" name="TipoPresentacion_s" id="TipoPresentacion_s" maxlength="20" required name="TipoPresentacion_s">
                                                {{#each data.presentaciones}}
                                                <option value="{{TipoPresentacion}}">{{TipoPresentacion}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Tipo Formato</label>
                                            <select class="form-control" name="TipoFormato_s" id="TipoFormato_s" maxlength="20" required>
                                                {{#each data.formatos}}
                                                <option value="{{TipoFormato}}">{{Descripcion}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Fecha Llegada Stock</label>
                                            <input type="date" class="form-control" name="FechaLlegadaStock" value="{{stock.FechaLlegadaStock}}" required>
                                            
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Cantidad</label>
                                            <input type="text" class="form-control" value="{{stock.Cantidad}}" required name="Cantidad">
                                            
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <input type="hidden" value="{{stock.TipoPresentacion_s}}" id="TipoPresentacion_s_Previo">
                                    <input type="hidden" value="{{stock.TipoFormato_s}}" id="TipoFormato_s_Previo">
                                    
                                    <script>
                                        let tipoPresentacion = document.getElementById("TipoPresentacion_s_Previo").value;
                                        let tipoFormato = document.getElementById("TipoFormato_s_Previo").value;
                                        
                                        document.getElementById("TipoPresentacion_s").value = tipoPresentacion;
                                        document.getElementById("TipoFormato_s").value = tipoFormato;
                                        
                                    </script>

                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <button class="btn btn-success">Guardar</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->