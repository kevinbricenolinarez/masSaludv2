<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Listado Stock <i class="fa fa-bars"></i></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Registros

                    <span></span>
                </div>
                <!-- /.panel-heading -->

                <div class="row" style="padding:16px">
                    <div class="col-lg-12" style="margin-bottom: 10px;">
                        <form role="form" method="POST" action="/stock/listarStock">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Buscar por proveedor" name="rut">
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </form>
                    </div>
                    
                    <div class="col-lg-12">
                        <span><a class="btn">Ordenar:</a></span>
                        <span><a class="btn btn-warning" href="/stock/listarStock/byDateDesc">Fecha: Desc</a></span>
                        <span><a class="btn btn-warning" href="/stock/listarStock/byDateAsc">Fecha: Asc</a></span>
                    </div>
                </div>

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Proveedor</th>
                                    <th>Medicamento</th>
                                    <th>Presentacion</th>
                                    <th>Formato</th>
                                    <th>Fecha</th>
                                    <th>Lote</th>
                                    <th>Cantidad</th>
                                    
                                    <th>Acci√≥n</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each stock}}
                                <tr class="odd gradeX">
                                    <td>{{IdProv_s}}</td>
                                    <td>{{IdMed_s}}</td>
                                    <td>{{TipoPresentacion_s}}</td>
                                    <td>{{TipoFormato_s}}</td>
                                    <td>{{FechaLlegadaStockBonita}}</td>
                                    <td>{{IdLote_s}}</td>
                                    <td>{{Cantidad}}</td>
                                    
                                    <td>
                                        <a class="btn btn-primary" href="/stock/editar/{{IdProv_s}}/{{IdMed_s}}/{{IdLote_s}}">Editar</a>
                                        <a class="btn btn-danger" href="/stock/eliminar/{{IdProv_s}}/{{IdMed_s}}/{{IdLote_s}}">Eliminar</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->