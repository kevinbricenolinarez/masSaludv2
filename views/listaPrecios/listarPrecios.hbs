<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Listado Precios <i class="fa fa-usd" ></i></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Registros

                    <span></span>
                </div>
                <!-- /.panel-heading -->

                <div class="row" style="padding:16px" >

                    <div class="col-lg-12">
                        <span><a class="btn">Ordenar:</a></span>
                        <span><a class="btn btn-warning" href="/listaPrecios/listarPrecios/byList">Orden de creación</a></span>
                        <span><a class="btn btn-warning" href="/listaPrecios/listarPrecios/byPrecioAsc">Precio: Ascendente</a></span>
                        <span><a class="btn btn-warning" href="/listaPrecios/listarPrecios/byPrecioDesc">Precio: Descendente</a></span>
                    </div>
                    
                   

                </div>

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Id medicamento</th>
                                    <th>Nombre medicamento</th>                                    
                                    <th>Precio</th>
                                    <th>Descuento</th>
                                    <th>Formato</th>
                                    <th>Presentación</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each precios}}
                                <tr class="odd gradeX">
                                    <td>{{IdMed_l}}</td>
                                    <td>{{NomMed}}</td>
                                    <td>{{Precio}}</td>
                                    <td>{{AplicSN_l}}</td>
                                    <td>{{TipoFormato_l}}</td>
                                    <td>{{TipoPresentacion_l}}</td>
                                    <td>
                                        <a class="btn btn-primary" href="/listaPrecios/editar/{{IdMed_l}}">Editar</a>
                                        <a class="btn btn-danger" href="/listaPrecios/eliminar/{{IdMed_l}}">Eliminar</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->