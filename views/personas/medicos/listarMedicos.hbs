<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Listado Médicos <i class="fa fa-user fa-fw"></i></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Registros
                </div>
                <!-- /.panel-heading -->

                <div class="row" style="padding:16px">
                    <div class="col-lg-12" style="margin-bottom: 10px;">
                        <form role="form" method="POST" action="/medicos/listarMedicos">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Buscar por RUT" name="rut">
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </form>
                    </div>

                    <div class="col-lg-12">
                        <span><a class="btn">Ordenar:</a></span>
                        <span><a class="btn btn-warning" href="/medicos/listarMedicos/byList">Orden de
                                creación</a></span>
                        <span><a class="btn btn-warning" href="/medicos/listarMedicos/byNomAZ">Nombre: A-Z</a></span>
                        <span><a class="btn btn-warning" href="/medicos/listarMedicos/byNomZA">Nombre: Z-A</a></span>
                        <span><a class="btn btn-warning" href="/medicos/listarMedicos/byRutAsc">RUT:
                                Ascendente</a></span>
                        <span><a class="btn btn-warning" href="/medicos/listarMedicos/byRutDesc">RUT:
                                Descendente</a></span>
                    </div>
            
                </div>

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>RUT</th>
                                    <th>Nombre</th>
                                    <th>Especialidad</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each medicos}}
                                <tr class="odd gradeX">
                                    <td>{{RutMed_Bonito}}</td>
                                    <td>{{NomMed_m}}</td>
                                    <td>{{EspecMed}}</td>
                                    <td>
                                        <a class="btn btn-primary" href="/medicos/editar/{{RutMed}}">Editar</a>
                                        <a class="btn btn-danger" href="/medicos/eliminar/{{RutMed}}">Eliminar</a>
                                    </td>
                                </tr>
                                {{/each}}


                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->