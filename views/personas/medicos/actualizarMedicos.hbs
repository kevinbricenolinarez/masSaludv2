<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Actualizar Medicos <i class="fa fa-user fa-fw"></i></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Medicos
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form role="form" method="POST" action="/medicos/editar">

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Rut Medico</label>
                                            <input class="form-control" disabled value="{{RutMed}}">
                                            <input type="hidden" name="RutMed" required value="{{RutMed}}">
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Nombre Medico</label>
                                             <input class="form-control" id="nommed" maxlength="20" name="NomMed_m" required value="{{NomMed_m}}">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Especialidad Medico</label>
                                            <input class="form-control" id="especmed" maxlength="20" name="EspecMed" required value="{{EspecMed}}">
                                        </div>
                                    </div>

                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-success">Guardar</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->