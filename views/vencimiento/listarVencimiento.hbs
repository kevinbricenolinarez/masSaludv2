<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Listado Vencimiento <i class="fa fa-calendar"></i></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Registros

                    <span></span>
                </div>
                <!-- /.panel-heading -->

                <div class="row" style="padding:16px">
                    <div class="col-lg-12" style="margin-bottom: 10px;">
                        <form role="form" method="POST" action="/vencimiento/listarVencimiento">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Buscar por proveedor" name="IdProv_v">
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </form>
                    </div>
                    
                    <div class="col-lg-12">
                        <span><a class="btn">Ordenar:</a></span>
                        <span><a class="btn btn-warning" href="/vencimiento/listarVencimiento/byDateDesc">Fecha: Desc</a></span>
                        <span><a class="btn btn-warning" href="/vencimiento/listarVencimiento/byDateAsc">Fecha: Asc</a></span>
                    </div>
                </div>

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Proveedor</th>
                                    <th>Fecha Vencimiento</th>
                                    <th>Lote</th>
                                    <th>Unidades</th>
                                    
                                    <th>Acci√≥n</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each vencimiento}}
                                <tr class="odd gradeX">
                                    <td>{{IdProv_v}}</td>
                                    <td>{{FechaVencimiento}}</td>
                                    <td>{{IdLote_v}}</td>
                                    <td>{{Unidades}}</td>
                                    
                                    <td>
                                        <a class="btn btn-primary" href="/vencimiento/editar/{{FechaVencimiento}}/{{IdLote_v}}/{{IdProv_v}}">Editar</a>
                                        <a class="btn btn-danger" href="/vencimiento/eliminar/{{FechaVencimiento}}/{{IdLote_v}}/{{IdProv_v}}">Eliminar</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->