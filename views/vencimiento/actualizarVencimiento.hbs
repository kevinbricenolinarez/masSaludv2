<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Actualizar Vencimiento <i class="fa fa-calendar"></i></h1>   
        </div>
       
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Vencimiento
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form role="form" method="POST" action="/vencimiento/editar">

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Proveedor</label>
                                            <input class="form-control" name="IdProv_v" value="{{vencimiento.IdProv_v}}" disabled>
                                            <input type="hidden" name="IdProv_v_Old" value="{{vencimiento.IdProv_v}}" required>
                                            <input type="hidden" name="IdProv_v" value="{{vencimiento.IdProv_v}}" required>

                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Unidades</label>
                                            <input type="number" class="form-control" name="Unidades" value="{{vencimiento.Unidades}}" required>
                                           

                                        </div>

                                    </div>

                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>ID Lote</label>
                                            <input type="number" class="form-control" value="{{vencimiento.IdLote_v}}" disabled>
                                            <input type="hidden" name="IdLote_v" value="{{vencimiento.IdLote_v}}" required>

                                        </div>
                                    </div>                                       
                                                                        

                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Fecha Vencimiento</label>
                                            <input type="date" class="form-control" name="FechaVencimiento" value="{{vencimiento.FechaVencimiento}}" required>
                                            <input type="hidden" name="FechaVencimiento_Old" value="{{vencimiento.FechaVencimiento}}">
                                        </div>
                                    </div>
                                    
                                </div>

                                <div class="row">
                                    <input type="hidden" value="{{vencimiento.IdProv_v}}" id="IdProv_v_Previo">
                                    
                                    <script>
                                        let idProveedor = document.getElementById("IdProv_v_Previo").value;
                                        console.log(idProveedor);
                                        
                                        document.getElementById("IdProv_v").value = idProveedor;
                                        
                                    </script>

                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <button class="btn btn-success">Guardar</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->