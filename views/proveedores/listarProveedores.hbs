<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Listado Proveedores <i class="fa fa-archive fa-fw"></i></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Registros

                    <span></span>
                </div>
                <!-- /.panel-heading -->

                <div class="row" style="padding:16px">
                    <div class="col-lg-12" style="margin-bottom: 10px;">
                        <form role="form" method="POST" action="/proveedores/listarProveedores">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Buscar por RUT" name="rut">
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </form>
                    </div>

                    <br>
                    
                    <div class="col-lg-12">
                        <span><a class="btn">Ordenar:</a></span>
                        <span><a class="btn btn-warning" href="/proveedores/listarProveedores/byNomAZ">Nombre: A-Z</a></span>
                        <span><a class="btn btn-warning" href="/proveedores/listarProveedores/byNomZA">Nombre: Z-A</a></span>
                        
                    </div>
                </div>

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Acci√≥n</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each proveedores}}
                                <tr class="odd gradeX">
                                   
                                    <td>{{IdProv}}</td>
                                    <td>{{NomLab}}</td>
                                    
                                    <td>
                                        <a class="btn btn-primary" href="/proveedores/editar/{{IdProv}}">Editar</a>
                                        <a class="btn btn-danger" href="/proveedores/eliminar/{{IdProv}}">Eliminar</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->