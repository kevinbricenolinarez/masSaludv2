<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Listado Proveedores</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Registros

                    <span></span>
                </div>
                <!-- /.panel-heading -->

                <div class="row" style="padding:16px">
                    <div class="col-lg-3">
                    <div class="input-group custom-search-form">
                        <input type="text" class="form-control" placeholder="Buscar...">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="button">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                    <!-- /input-group -->
                    </div>

                    <div class="col-lg-3">
                        <select class="form-control">
                            <option value="A-Z">Nombre: A-Z</option>
                            <option value="Z-A">Nombre: Z-A</option>
                            
                        </select>
                    </div>
                    
                </div>

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Acci√≥n</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each proveedores}}
                                <tr class="odd gradeX">
                                   
                                    <td>{{IdProv}}</td>
                                    <td>{{NomLab}}</td>
                                    
                                    <td>
                                        <a class="btn btn-primary" href="/proveedores/editar/{{IdProv}}">Editar</a>
                                        <a class="btn btn-danger" href="/proveedores/eliminar/{{IdProv}}">Eliminar</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->