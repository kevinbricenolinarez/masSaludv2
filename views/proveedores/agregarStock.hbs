<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Registrar Stock <i class="fa fa-archive fa-fw"></i></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Stock
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form role="form" method="POST" action="/proveedores/agregarStock">

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Proveedor</label>
                                            <select class="form-control" id="prov" maxlength="20" required name="IdProv_s">
                                                {{#each dataStock.proveedores}}
                                                <option value="{{IdProv}}">{{NomLab}}</option>
                                                {{/each}}
                                            </select>
                                            
                                        </div>
                                    </div>
                                    
                                </div>

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Medicamento</label>
                                            <select class="form-control" id="meds" maxlength="20" required name="IdMed_s">
                                                {{#each dataStock.medicamentos}}
                                                <option value="{{IdMed}}">{{NomMed}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Formato MED</label>
                                            <select class="form-control" id="venFor" maxlength="20" required name="TipoFormato_s">
                                                {{#each dataStock.formatos}}
                                                <option value="{{TipoFormato}}">{{Descripcion}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Presentaci√≥n MED</label>
                                            <select class="form-control" id="venTam" maxlength="20" required name="TipoPresentacion_s">
                                                {{#each dataStock.presentaciones}}
                                                <option value="{{TipoPresentacion}}">{{TipoPresentacion}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Cantidad</label>
                                            <input type="number" min="1" class="form-control" id="cant" maxlength="20" required name="Cantidad">
                                             
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Lote</label>
                                            <input type= "number" min="1" class="form-control" id="lote" required name="IdLote_s">
                                               
                                            
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="form-group">
                                            <label>Fecha</label>
                                            <input type= "date" class="form-control" id="lote" required name="FechaLlegadaStock">
                                               
                                            
                                        </div>
                                    </div>

                        
                                        

                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <button class="btn btn-success">Guardar</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->